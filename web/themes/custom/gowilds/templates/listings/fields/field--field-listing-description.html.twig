<div class="accordion" id="listing-desc-accordion">
   {% set i = 0 %}
   {%- for item in items -%}
      {% set classes = '' %}
      {% set k = random(6) %}
      {% set i = i + 1 %}
      {% if i == 1 %}
         {% set classes = 'show' %}
      {% endif %}
      <div class="accordion-item">
         <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#acc-item-{{k}}" aria-expanded="true">
             {{ item.content['#paragraph'].field_paragraph_desc_title.value }}
            </button>
          </h2>
          <div id="acc-item-{{k}}" class="accordion-collapse collapse {{classes}}" data-bs-parent="#listing-desc-accordion">
            <div class="accordion-body">
               {{ item.content['#paragraph'].field_paragraph_desc_content.value|raw }}
            </div>
          </div>
      </div>
   {%- endfor -%}
</div>

